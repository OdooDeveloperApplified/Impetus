<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Group Name Form View -->
    <record id="view_group_name_form" model="ir.ui.view">
        <field name="name">group.name.form</field>
        <field name="model">group.name</field>
        <field name="arch" type="xml">
            <form string="Group Name">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>

                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Group Name Tree View -->
    <record id="view_group_name_tree" model="ir.ui.view">
        <field name="name">group.name.tree</field>
        <field name="model">group.name</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    
    <!-- Group Name Action -->
    <record id="action_group_name" model="ir.actions.act_window">
        <field name="name">Group Name</field>
        <field name="res_model">group.name</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create and manage Group Names.
            </p>
        </field>
    </record>

    <!-- Master Menu under Contacts > Configuration -->
    <menuitem id="menu_contacts_master_root"
              name="Master"
              parent="contacts.res_partner_menu_config"
              sequence="7"
              />

    <!-- Category Menu under Contacts > Configuration > Master -->
    <menuitem id="menu_group_name"
              name="Group Name"
              parent="impel_contacts.menu_contacts_master_root"
              action="action_group_name"
              sequence="1"
              />

</odoo>