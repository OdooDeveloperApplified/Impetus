<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Record to add custom fields in Contacts form view -->
    <record id="view_contact_template_form_inherit" model="ir.ui.view">
        <field name="name">contact.template.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='category_id']" position="after">
                <field name="group_name_ids"/>
            </xpath>

            <xpath expr="//field[@name='user_ids']" position="after">
                <field name="whatsapp_no" widget="phone"/>
            </xpath>

            <xpath expr="//div[@class='o_address_format']" position="after">
                <field name="aadhaar_no"/>
            </xpath>

            <xpath expr="//field[@name='aadhaar_no']" position="before">
                <field name="contact_dob"/>
                <field name="contact_anniversary"/>
            </xpath>

            <xpath expr="//page[@name='sales_purchases']" position="after">
                <page string="E-way bill Info" name="bill_info">
                    <group>
                        <field name="station"/>
                        <field name="demo"/>
                        <field name="pin"/>
                    </group>
                </page>
            </xpath>

            <xpath expr="///field[@name='function']" position="after">
                <field name="point_of_contact"/>
            </xpath>
        </field>
    </record>

    <!-- Record to add below odoo built-in fields under sales and purchase page of contacts form view -->
    <record id="view_partner_form_inherit" model="ir.ui.view">
        <field name="name">res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="sales_team.res_partner_view_team"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales_purchases']//group[@name='sale']/field[@name='team_id']" position="before">
                <field name="credit_days"/>
                <field name="credit_limit"/>
            </xpath>
        </field>
    </record>
</odoo>