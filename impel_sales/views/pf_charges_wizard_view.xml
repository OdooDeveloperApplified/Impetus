<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pf_charges_wizard_form" model="ir.ui.view">
        <field name="name">pf.charges.wizard.form</field>
        <field name="model">pf.charges.wizard</field>
        <field name="arch" type="xml">
            <form string="Add PF Charges">
                <group>
                    <field name="percentage" widget="percentage"/>
                </group>
                <footer>
                    <button name="action_apply_pf_charges" string="Apply" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
