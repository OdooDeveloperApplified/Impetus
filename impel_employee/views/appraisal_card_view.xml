<odoo>
    <record id="view_appraisal_card_tree" model="ir.ui.view">
        <field name="name">employee.appraisal.card.tree</field>
        <field name="model">employee.appraisal.card</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="amount"/>
                <field name="is_penalty"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_appraisal_card_form" model="ir.ui.view">
        <field name="name">employee.appraisal.card.form</field>
        <field name="model">employee.appraisal.card</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="amount"/>
                    <field name="is_penalty"/>
                    <field name="active"/>
                </group>
            </form>
        </field>
    </record>
</odoo>
